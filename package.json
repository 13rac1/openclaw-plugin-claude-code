{
  "name": "@13rac1/openclaw-plugin-claude-code",
  "version": "1.0.10",
  "description": "OpenClaw plugin for running Claude Code CLI in isolated Podman containers",
  "type": "module",
  "license": "Apache-2.0",
  "author": "Bradley Erickson",
  "repository": {
    "type": "git",
    "url": "https://github.com/13rac1/openclaw-plugin-claude-code.git"
  },
  "bugs": {
    "url": "https://github.com/13rac1/openclaw-plugin-claude-code/issues"
  },
  "homepage": "https://github.com/13rac1/openclaw-plugin-claude-code#readme",
  "keywords": [
    "openclaw",
    "plugin",
    "claude",
    "claude-code",
    "podman",
    "container"
  ],
  "main": "dist/claude-code.js",
  "types": "dist/claude-code.d.ts",
  "exports": {
    ".": {
      "types": "./dist/claude-code.d.ts",
      "import": "./dist/claude-code.js"
    }
  },
  "files": [
    "dist",
    "openclaw.plugin.json"
  ],
  "scripts": {
    "build": "tsc && esbuild src/claude-code.ts --bundle --platform=node --format=esm --outfile=dist/claude-code.js --external:openclaw && cp openclaw.plugin.json dist/",
    "clean": "rm -rf dist coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "vitest run --config vitest.config.ts",
    "test:coverage": "vitest run --config vitest.config.ts --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:all": "npm test && npm run test:integration",
    "test:watch": "vitest",
    "check": "npm run lint && npm run format:check && npm run build && npm run test:coverage",
    "prepublishOnly": "npm run check"
  },
  "peerDependencies": {
    "openclaw": ">=2025.1.0"
  },
  "devDependencies": {
    "@sinclair/typebox": "^0.34.48",
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "openclaw": {
    "extensions": [
      "./dist/claude-code.js"
    ]
  }
}
